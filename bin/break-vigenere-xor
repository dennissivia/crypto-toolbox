#!/usr/bin/env ruby

require 'crypto-toolbox'

if ARGV[0].nil?
  $stderr.puts "Missing Argument: Ciphertext (hexstring)"
else
  ciphertext = ARGV[0]

  results = Analyzers::VigenereXor.new.analyze(ciphertext)
  unless results.empty?
    puts "[Success] Found valid result(s):"
    puts results.map(&:str)
  end

end
